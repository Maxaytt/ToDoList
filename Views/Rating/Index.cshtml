@model IEnumerable<UserRating>

<h1>User Rating</h1>

<table>
    <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Total Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRating in Model)
        {
            <tr>
                <td>@(Model.ToList().IndexOf(userRating) + 1)</td>
                <td>@userRating.UserId</td>
                <td>@userRating.TotalPoints</td>
            </tr>
        }
    </tbody>
</table>
