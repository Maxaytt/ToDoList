@model UserStatistic

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <h4>UserStatistic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Id :</dt>
        <dd class = "col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">TasksCount:</dt>
        <dd class="col-sm-10">@Model.TasksCount</dd>

        <dt class="col-sm-2">OverdueTasksCount :</dt>
        <dd class="col-sm-10">@Model.OverdueTasksCount</dd>

        <dt class="col-sm-2">TimelyCompletedTasksCount :</dt>
        <dd class="col-sm-10">@Model.TimelyCompletedTasksCount</dd>

        <dt class="col-sm-2">DeleteTasksCount :</dt>
        <dd class="col-sm-10">@Model.DeleteTasksCount</dd>
        
        <dt class="col-sm-2">AvgExecutionTime :</dt>
        <dd class="col-sm-10">@Math.Round(Model.AvgExecutionTime, 2)%</dd>

        <dt class="col-sm-2"> AvgDelayTime:</dt>
        <dd class="col-sm-10">@Model.AvgDelayTime</dd>
    </dl>

</div>
