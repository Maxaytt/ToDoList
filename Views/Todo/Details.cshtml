@model TodoTask

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TodoTask</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Id :</dt>
        <dd class = "col-sm-10">@Model.Id</dd>

        <dt class = "col-sm-2">Description :</dt>
        <dd class = "col-sm-10">@Model.Description</dd>

        <dt class = "col-sm-2">Priority :</dt>
        <dd class = "col-sm-10">@Model.Priority</dd>

        <dt class = "col-sm-2">Status :</dt>
        <dd class = "col-sm-10">@(Model.IsCompleted ? "Complete" : "Unfinished")</dd>
       
        <dt class = "col-sm-2">Created At :</dt>
        <dd class = "col-sm-10">@Model.CreatedAt</dd>
        @if(@Model.IsCompleted)
        {
        <dt class = "col-sm-2">Completed At :</dt>
        <dd class = "col-sm-10">@Model.CompletedAt</dd>
        }
        <dt class = "col-sm-2">Deadline :</dt>
        <dd class = "col-sm-10">@Model.Deadline</dd>
    </dl>
</div>
<div>
    @if(Model.IsCompleted)
    {
        <a asp-action="Completed"class="btn btn-primary">Back to Tasks</a>
    } else
    {
        <a asp-action="Index"class="btn btn-primary">Back to Tasks</a>
    }

</div>
